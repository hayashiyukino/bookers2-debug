<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <!--books = @books = Bookテーブルに保存されたデータ全て-->
    <!--books.each = bookレコードの数だけ繰り返し処理-->
    <!--|book| = 変数 = 各レコードの内容が格納される-->
    <% books.each do |book| %>
      <tr>
        <!--投稿したユーザー詳細画面に へのリンクをつける-->
        <td>
          <!--リンク先-->
           <%= link_to user_path(book.user.id) do %>
            <!--ユーザーの画像-->
            <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <!--bookのタイトル表示と、bookの詳細ページへのリンク先設定-->
        <td><%= link_to book.title, book_path(book.id) %></td>
        <!--bookのbodyの内容を表示させる-->
        <td><%= book.body %></td>
        <!--いいね機能の非同期処理と部分テンプレート-->
         <!--id="%= book.id.to_s %>" = cssの指定（命名自由）非同期処理で必要-->
        <td id="<%= book.id.to_s %>"><%= render 'favorites/favorite', book: book %></td>
        <!--コメント機能の非同期処理と部分テンプレート-->
        <%= render 'book_comments/book_comments',book: book %>
      </tr>
    <% end %>
  </tbody>
</table>