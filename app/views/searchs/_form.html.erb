<% if user_signed_in? %>
    <!--form_tag = 簡単に入力フォームに必要なHTMLを作成することが可能なヘルパーメソッド。-->
    <%= form_tag(search_path, method: :get) do %>
      <!--# 検索するワードを contentという架空のカラムに格納される-->
      <%= text_field_tag 'content' %>
      <!--#　検索したモデルをセレクトで選択でき,接頭文字が大文字の方が表示されるもの、接頭文字が小文字のものがmodelと言う架空のカラムに格納される-->
      <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book" }) %>
      <!--# 検索する際の条件のセレクトで選択した条件によってmethodと言う架空のカラムに完全一致～後方一致のいづれかが格納される-->
      <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward" }) %>
      <%= submit_tag '検索' %>
    <% end %>
<% end %>